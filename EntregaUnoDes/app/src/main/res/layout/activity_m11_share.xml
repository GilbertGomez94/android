<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_m11_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zedin.entregaunodes.M11ShareActivity">

    <TextView
        android:text="Cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:id="@+id/textView2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/m11_circle"
        android:clickable="false"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:text="5000" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="?android:attr/textCheckMark"
        android:id="@+id/sig"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView2"
        android:background="#00FF00"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_toRightOf="@+id/textView2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_share"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageButton4"
        android:background="#00FF00" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_delete"
        android:id="@+id/imageButton5"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:background="#ffffff"/>

    <Spinner
        android:id="@+id/spinner_comida"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </Spinner>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:layout_above="@+id/sig"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/comida_uno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Comida Uno"
                android:paddingRight="60dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_busy"
                android:id="@+id/imageButton6"
                android:background="#ffffff"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/comida_dos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Comida Dos"
                android:paddingRight="60dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_busy"
                android:id="@+id/imageButtondos"
                android:background="#ffffff"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/comida_tres"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Comida Tres"
                android:paddingRight="60dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_busy"
                android:id="@+id/imageButtontres"
                android:background="#ffffff"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/comida_cuatro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Comida Cuatro"
                android:paddingRight="60dp" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/presence_busy"
                android:id="@+id/imageButtoncuatro"
                android:background="#ffffff"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:text="Escriba un alimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/spinner_comida"
        android:layout_toLeftOf="@+id/imageButton4"
        android:layout_toStartOf="@+id/imageButton4"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/imageButton"
        android:layout_below="@+id/spinner_comida"
        android:layout_toRightOf="@+id/sig"
        android:layout_toEndOf="@+id/sig"
        android:background="#ffffff"/>

</RelativeLayout>
